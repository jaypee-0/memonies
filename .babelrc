{
  "plugins": [
    [
      "module:react-native-dotenv",
      {
        "moduleName": "@env",
        "path": ".env",
        "verbose": false
      }
    ],
    [
      "module-resolver",
      {
        "root": ["./src/"],
        "extensions": [
          ".ios.js",
          ".android.js",
          ".js",
          ".ts",
          ".tsx",
          ".json",
          ".svg"
        ],
        "alias": {
          "@/*": ["./src/*"],
          "@/shared": ["./src/shared/*"],
          "@/components": ["./src/components/*"],
          "@/screens": ["./src/screens/*"],
          "@/redux": ["./src/redux/*"],
          "@/lib": ["src/lib/*"],
          "@/assets": ["./src/assets/*"],
          "@/services": ["./src/services/*"],
          "@/navigation": ["./src/navigation"],
          "@/hooks": ["./src/hooks"],
          "@/utils": ["./src/utils/*"],
          "@/theme": ["./src/theme/*"],
          "@/images": ["./src/assets/images/*"],
          "@/data": ["src/data"]
        }
      }
    ]
  ]
}
